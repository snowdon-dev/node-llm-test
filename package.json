{
  "name": "node-llm-test",
  "version": "0.15.5",
  "description": "Generate tests to evaluate the intelligence of large language models.",
  "author": "hello@snowdon.dev",
  "type": "commonjs",
  "files": [
    "./README.md",
    "./LICENSE",
    "./dist"
  ],
  "keywords": [
    "node-llm-test",
    "llmtest",
    "llm-test",
    "prompt-testing",
    "llm-testing",
    "llm-pipeline",
    "prompt-engineering",
    "context-engineering",
    "langchain",
    "openai",
    "gpt",
    "typescript",
    "nodejs",
    "npm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowdon-dev/node-llm-test.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "bin": {
    "node-llm-test": "dist/interface/cli.js",
    "llmtest": "dist/interface/cli.js"
  },
  "main": "dist/interface/index.js",
  "scripts": {
    "test": "jest --workerThreads -b",
    "build": "node esbuild.config.cjs && tsc --emitDeclarationOnly --project tsconfig.build.json",
    "deploy": "prettier src/ --check && npm run build",
    "check": "tsc --noEmit",
    "prod:test": "jest --coverage --workerThreads -b",
    "prepare": "npm run build",
    "run": "tsx --tsconfig tsconfig.build.json src/interface/cli.ts",
    "genwords": "tsx --tsconfig tsconfig.build.json src/interface/genwords.ts",
    "pretty": "prettier src/ --write",
    "pretty:check": "prettier src/ --check"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "coverage-badges-cli": "2.1.0",
    "jest": "^30.0.4",
    "prettier": "3.6.2",
    "tinybench": "5.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "tsx": "^4.20.6",
    "esbuild": "^0.25.10"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.8",
    "commander": "^14.0.0",
    "inquirer": "^9.0.0"
  }
}
