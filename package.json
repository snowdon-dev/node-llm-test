{
  "name": "node-llm-test",
  "version": "0.14.0",
  "description": "Generate tests to evaluate the intelligence of large language models.",
  "author": "hello@snowdon.dev",
  "files": [
    "./README.md",
    "./LICENSE",
    "./dist"
  ],
  "keywords": [
    "node-llm-test",
    "llmtest",
    "llm-test",
    "prompt-testing",
    "llm-testing",
    "llm-pipeline",
    "prompt-engineering",
    "context-engineering",
    "langchain",
    "openai",
    "gpt",
    "typescript",
    "nodejs",
    "npm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snowdon-dev/node-llm-test.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "type": "commonjs",
  "bin": {
    "node-llm-test": "dist/cli.js",
    "llmtest": "dist/cli.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --workerThreads",
    "build": "tsc --project tsconfig.build.json",
    "prod:test": "jest --coverage --workerThreads",
    "prepare": "npm run build",
    "run": "tsx --tsconfig tsconfig.build.json src/cli.ts",
    "genwords": "tsx --tsconfig tsconfig.build.json src/genwords.ts",
    "pretty": "prettier src/ --write",
    "pretty:check": "prettier src/ --check"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "coverage-badges-cli": "^2.1.0",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "tinybench": "^5.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.8",
    "commander": "^14.0.0",
    "inquirer": "^9.0.0"
  }
}
